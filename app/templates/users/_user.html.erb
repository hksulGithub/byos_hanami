<li id="<%= user.id %>" class="bit-card user">
  <h2 class="label"><%= user.name %></h2>

  <%= tag.a user.email, href: "mailto:#{user.email}" %>
  <%= tag.span user.status.name, class: "bit-pill bit-pill-#{user.pill}" %>

  <div class="actions">
   <%= render "shared/actions/show",
              path: routes.path(:user, id: user.id),
              target: "closest .page-users" %>

   <%= render "shared/actions/edit",
              path: routes.path(:user_edit, id: user.id),
              target: "closest .page-users" %>
  </div>
</li>
