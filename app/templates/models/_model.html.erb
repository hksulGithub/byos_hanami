<li id="<%= model.id %>" class="bit-card model">
  <h2 class="label"><%= model.label %></h2>

  <%= tag.span model.kind_label %>
  <%= tag.span model.type %>
  <%= tag.span model.dimensions %>

  <div class="actions">
   <a href="<%= routes.path :model, id: model.id %>"
      hx-get="<%= routes.path :model, id: model.id %>"
      hx-target="closest .page-models"
      hx-swap="outerHTML"
      hx-push-url="true">
     View
   </a>

    <a href="<%= routes.path :model_edit, id: model.id %>"
       hx-get="<%= routes.path :model_edit, id: model.id %>"
       hx-target="closest .page-models"
       hx-swap="outerHTML"
       hx-push-url="true">
      Edit
    </a>

    <%= render "shared/delete",
               path: routes.path(:model_delete, id: model.id),
               confirm: "Are you sure you want to delete this model?",
               target: "closest .model" %>
  </div>
</li>
