<tr class="firmware">
  <td>
    <%= link_to firmware.version, firmware.attachment_uri, download: firmware.attachment_name %>
  </td>
  <%= tag.td size(firmware.attachment_size) %>
  <%= tag.td human_at(firmware.created_at) %>

  <td class="actions">
    <%= render "shared/actions/delete",
               path: routes.path(:firmware_delete, id: firmware.id),
               confirm: "Are you sure you want to delete this firmware?",
               target: "closest .firmware" %>
  </td>
</tr>
