<div class="show_item">
  <img src="<%= item.screen.image_uri %>"
       alt="Screen"
       class="image"
       loading="lazy"
       width="100"
       height="60">

  <div class="labels">
    <%= link_to item.screen.label, routes.path(:screen, id: item.screen.id) %>
    <%= playlist.current_pill item %>
  </div>
</div>
