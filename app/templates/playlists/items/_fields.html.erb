<fieldset class="column">
  <%= scope(:form_field, key: :screen_id, errors:).render do %>
    <label class="key" for="playlist_item_screen_id">Screen</label>

    <%= tag.select id: :playlist_item_screen_id,
                   name: "playlist_item[screen_id]",
                   class: :value do %>
      <% screen_options.each do |label, id| %>
        <%= tag.option label, value: id, selected: id == field_for(:screen_id, fields, item) %>
      <% end %>
    <% end %>
  <% end %>
</fieldset>
