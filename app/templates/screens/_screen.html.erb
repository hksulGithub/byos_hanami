<li id="<%= screen.id %>" class="bit-card screen">
  <h2 class="label"><%= screen.label %></h2>

  <%= render "shared/screen", uri: screen.image_uri %>

  <span class="type"><%= screen.type %></span>
  <span class="type"><%= screen.dimensions %></span>

  <div class="actions">
   <a href="<%= routes.path :screen, id: screen.id %>"
      hx-get="<%= routes.path :screen, id: screen.id %>"
      hx-target="closest .page-screens"
      hx-swap="outerHTML"
      hx-push-url="true">
     View
   </a>

    <a href="<%= routes.path :screen_edit, id: screen.id %>"
       hx-get="<%= routes.path :screen_edit, id: screen.id %>"
       hx-target="closest .page-screens"
       hx-swap="outerHTML"
       hx-push-url="true">
      Edit
    </a>

    <a href="<%= screen.image_uri %>" download="<%= screen.image_name %>">Download</a>

    <%= render "shared/delete",
               path: routes.path(:screen_delete, id: screen.id),
               confirm: "Are you sure you want to delete this screen?",
               target: "closest .screen" %>
  </div>
</li>
