<%= render "shared/title", text: "#{screen.label} Screen" %>

<section class="page-screens">
  <header class="bit-header">
    <ul class="bit-breadcrumbs">
      <li class="bit-breadcrumb"><a href="/screens" class="link">Screens</a></li>
      <li class="bit-breadcrumb"><%= screen.label %></li>
    </ul>
  </header>

  <div class="bit-body">
    <div class="screen">
      <%= tag.img src: screen.image_uri,
                  alt: "Screen",
                  class: :image,
                  width: 250,
                  height: 150,
                  loading: :lazy %>

      <h2 class="label"><%= screen.label %></h2>

      <div class="bit-actions">
        <a href="<%= routes.path :screen_edit, id: screen.id %>"
           hx-get="<%= routes.path :screen_edit, id: screen.id %>"
           hx-target="closest .page-screens"
           hx-swap="outerHTML"
           hx-push-url="true">
          Edit
        </a>
      </div>

      <dl class="bit-definition-list">
        <dt class="key">Name</dt>
        <dd class="value"><%= screen.name %></dd>

        <dt class="key">Model</dt>
        <dd class="value"><%= screen.model.label %></dd>

        <dt class="key">MIME Type</dt>
        <dd class="value"><%= screen.mime_type %></dd>

        <dt class="key">Dimensions</dt>
        <dd class="value"><%= screen.dimensions %></dd>

        <dt class="key">Bit Depth</dt>
        <dd class="value"><%= screen.bit_depth %></dd>

        <dt class="key">Size</dt>
        <dd class="value"><%= size screen.image_size %></dd>

        <dt class="key">Created</dt>
        <dd class="value"><%= human_at screen.created_at %></dd>

        <dt class="key">Updated</dt>
        <dd class="value"><%= human_at screen.updated_at %></dd>
      </dl>
    </div>
  </div>
</section>
