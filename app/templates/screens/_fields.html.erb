<fieldset role="group" class="group">
  <%= scope(:form_field, key: :model_id, errors:).render do %>
    <label class="key" for="screen_model_id">
      Model
      <%= render "shared/popovers/trigger", name: :model %>
    </label>

    <%= tag.select id: :screen_model_id, name: "screen[model_id]", class: :value do %>
      <% select_options_for(models).each do |label, id| %>
        <%= tag.option label, value: id, selected: id == field_for(:model_id, fields, screen) %>
      <% end %>
    <% end %>
  <% end %>

  <%= scope(:form_field, key: :label, errors:).render do %>
    <label class="key" for="screen_label">Label</label>

    <%= tag.input id: :screen_label,
                  name: "screen[label]",
                  value: field_for(:label, fields, screen),
                  class: :value,
                  autocomplete: :label %>
  <% end %>

  <%= scope(:form_field, key: :name, errors:).render do %>
    <label class="key" for="screen_name">
      Name
      <%= render "shared/popovers/trigger", name: :name %>
    </label>

    <%= tag.input id: :screen_name,
                  name: "screen[name]",
                  value: field_for(:name, fields, screen),
                  class: :value,
                  autocomplete: :name %>
  <% end %>
</fieldset>

<%= render "popovers/all" %>
